<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.ChatController">
    <ScrollPane>
        <Pane>
            <TextField promptText="enter the chat you want sent" fx:id="mustBeSent" prefWidth="250"/>
            <Label textFill="darkblue" text="send" onMouseClicked="#tryToSend" layoutX="300"/>
            <Label text="refresh" onMouseClicked="#refresh" layoutY="30" textFill="darkblue"/>
        </Pane>

    </ScrollPane>

</Pane>
